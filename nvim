nvim () {
    tty=
    tty -s && tty=--tty

    docker run \
        $tty \
    	 -it \
	 --rm \
	 --volume $(pwd):/root/workspace \
	 --volume $HOME/.config/coc:/root/.config/coc \
	 --volume $HOME/.vim:/root/.vim \
	 --volume $HOME/.fzf:/root/.fzf \
 	 massolari/docker-vim:latest "$@"

}

nvim $@
